@{
    Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/viewjs/Global.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Style/assets/css/twitter-bootstrap/bootstrap.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Style/assets/css/social.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/viewjs/VLogin.js")" type="text/javascript"></script>

<div class="container" style="font-family:Microsoft YaHei;">
    <div class="form-login" style="margin-top:15%;">
    <h2 class="form-heading">
        Please log in</h2>
    <input type="text" id="login_id" class="input-block-level" placeholder="Login ID"/>
    <input type="password" id="login_pwd" class="input-block-level" placeholder="Password"/>
    <div class="row-fluid">
        <label class="checkbox span6">
            <input type="checkbox" value="remember-me" id="login_remember" checked="checked"/>
            Remember me
        </label>
        <input type="button" class="btn btn-primary pull-right span6" value="Log in" onclick="fn_Log_in()"/>
    </div>
    <div id="dv_login_msg" style="color: red;"/>
    <div class="forget-password">
        <div style="margin:0;padding:0; width:300px;height:1px;background-color:#6f7174;"></div>
        <div style="margin-top:5px;">
            <font style="color:#6f7174;font-size:12px;">忘记密码 | 创建账户 请联系 </font><font style="color:#273b7c;font-size:11.5px;">Kevin.Zhang@Hotelvp.com</font>
        </div>
    </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        if ("@ViewBag.UserName" != "") {
            $("#login_id").val("@ViewBag.UserName");
            document.getElementById("login_remember").checked = true;
        }
    });
    </script>
