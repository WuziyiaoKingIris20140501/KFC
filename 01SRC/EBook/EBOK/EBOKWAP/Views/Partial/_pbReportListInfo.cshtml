@model System.Data.DataSet
<div class="row" id="dvroomcmbody" style="margin-top:0px;">
    <div class="col-lg-12 text-center">
        <div class="panel panel-default">
            <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped tablesorter">
                <thead>
                <th class="header warning">
                   房型名称
                </th>
                <th class="header warning">
                   订单数
                </th>
                <th class="header warning">
                   确认可住单
                </th>
                <th class="header warning">
                   No-Show单
                </th>
                <th class="header warning">
                   待确认+取消单
                </th>
                <th class="header warning">
                   离店单
                </th>
                <th class="header warning">
                   离店金额
                </th>
                </thead>
                <tbody style="margin-top:-5px">
                    @{
                        var odzs = 0;
                        var odrz = 0;
                        var odns = 0;
                        var odld = 0;
                        
                        var odqt = 0;
                        var odje = decimal.Parse("0");
                        
                        if (Model != null && Model.Tables.Count > 0 && Model.Tables[0].Rows.Count > 0)
                        {
                            for (int i = 0; i < Model.Tables[0].Rows.Count; i++)
                            {
                                odzs = odzs + int.Parse(Model.Tables[0].Rows[i][1].ToString());
                                odrz = odrz + int.Parse(Model.Tables[0].Rows[i][2].ToString());
                                odns = odns + int.Parse(Model.Tables[0].Rows[i][3].ToString());
                                odqt = odqt + int.Parse(Model.Tables[0].Rows[i][4].ToString());
                                odld = odld + int.Parse(Model.Tables[0].Rows[i][5].ToString());
                                odje = odje + decimal.Parse(Model.Tables[0].Rows[i][6].ToString());

                                @Html.Raw("<tr>")
                                <td>@Model.Tables[0].Rows[i][0].ToString()</td>
                                <td>@Model.Tables[0].Rows[i][1].ToString()</td>
                                <td>@Model.Tables[0].Rows[i][2].ToString()</td>
                                <td>@Model.Tables[0].Rows[i][3].ToString()</td>
                                <td>@Model.Tables[0].Rows[i][4].ToString()</td>
                                <td>@Model.Tables[0].Rows[i][5].ToString()</td>
                                <td>@Model.Tables[0].Rows[i][6].ToString()</td>
                                @Html.Raw("</tr>")
                            }
                        }
                    }
                </tbody>
                </table>
                <br />
                <table class="table table-bordered table-hover table-striped tablesorter">
                <thead>
                <th class="header danger">
                   总订单
                </th>
                <th class="header danger">
                   总确认可住单
                </th>
                <th class="header danger">
                   总No-Show单
                </th>
                <th class="header danger">
                   总待确认+取消单
                </th>
                <th class="header danger">
                   总离店单
                </th>
                <th class="header danger">
                   总离店金额
                </th>
                </thead>
                <tbody style="margin-top:-5px">
                   @Html.Raw("<tr>")
                    <td>@odzs</td>
                    <td>@odrz</td>
                    <td>@odns</td>
                    <td>@odqt</td>
                    <td>@odld</td>
                    <td>@odje</td>
                    @Html.Raw("</tr>")
                </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>
