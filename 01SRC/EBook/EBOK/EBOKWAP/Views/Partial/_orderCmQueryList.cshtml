@model List<HotelVp.EBOK.Domain.API.Model.OrderList>

<div class="row" id="dvordercmbody" style="margin-top:5px;">
    <div class="col-lg-12 text-center">
        <div class="panel panel-default">
            <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped tablesorter">
                <thead>
                <tr>
                    <th class="header warning">订单号</th>
                    <th class="header warning">入住人</th>
                    <th class="header warning">电话</th>
                    <th class="header warning">入住时间</th>
                    <th class="header warning">离店时间</th>
                    <th class="header warning">房型</th>
                    <th class="header warning">状态</th>
                </tr>
                </thead>
                    <tbody style="margin-top:-5px" id="tborderlist">
                        @{
                            if (Model != null && Model.Count > 0)
                            {
                                for (int i = 0; i < Model.Count; i++)
                                {
                                    @Html.Raw("<tr>");
                                    <td>@Model[i].fogOrderNum</td>
                                    <td>@Model[i].guestNames</td>
                                    <td>@Model[i].contactTel</td>
                                    <td>@Model[i].inDate</td>
                                    <td>@Model[i].outDate</td>
                                    <td>@Model[i].roomTypeName</td>
                                    <td>@Model[i].statusDesc</td>
                                    @Html.Raw("</tr>");
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
</div>
<div style="width:100%;text-align:center;color:#999999" id="dvlamsg">↑上拉更多</div>

<input type="hidden" id="hidPageNum" value="@ViewBag.PageNum"/>
<input type="hidden" id="hidPgeSize" value="@ViewBag.PgeSize"/>
<input type="hidden" id="hidHasNext" value="@ViewBag.HasNext"/>

<script language="javascript" type="text/javascript">
    document.getElementById("hidPageNum").value = '@ViewBag.PageNum';
    document.getElementById("hidPgeSize").value = '@ViewBag.PgeSize';
    document.getElementById("hidHasNext").value = '@ViewBag.HasNext';
</script>